<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="col-md-12">

    <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-md-10 offset-1">
          <%= f.label :chefname, "Choose Chefname" %>
        </div>
        <div class="col-md-10 offset-1">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 offset-1">
          <%= f.label :email %>
        </div>
        <div class="col-md-10 offset-1">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your emial", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 offset-1">
          <%= f.label :password %>
        </div>
        <div class="col-md-10 offset-1">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 offset-1">
          <%= f.label :password_confirmation, "Confirm password" %>
        </div>
        <div class="col-md-10 offset-1">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 offset-1">
          <%= f.submit(@chef.new_record? ? "Create my account" : "Update my profile", 
                                            class: "btn btn-primary btn-lg create") %>
        </div>
      </div>
    <% end %>
      <div class="col-md-4 offset-4 cancel">
        <%=link_to "Cancel request and return to recipes listing", recipes_path, class: "tag" %>
      </div>

  </div>
</div>